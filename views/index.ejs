<%- include('partials/header.ejs'); %>

<section>
        <div class="container">
            <hr>
            <h1>Perguntas</h1>
            <hr>
            <a href="/ask" class="btn btn-primary">Perguntar</a>
            <hr>
            <% asks.forEach((asks)=> {%>
                <br>
                <div class="card">
                    <div class="card-body">
                        <h3><%= asks.title %></h3>
                        <br>
                        <h5><%= asks.description %></h5>
                    </div>
                    <div class="card-footer">
                        <a href="/askPage/<%= asks.id %>"><button class="btn btn-primary">Responder</button></a>
                    </div>
                </div>
            <% }); %>
        </div>
</section>

<%- include('partials/footer.ejs'); %>
